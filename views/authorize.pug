  head
    title Todoosey
    base(href='/')
    head
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='en:locale', content='en')
      meta(charset='utf-8')
      meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no')
      link(href='/scripts/bootstrap/dist/css/bootstrap.min.css', rel='stylesheet')
      link(href='style.css', rel='stylesheet')
  body(class="container")
    nav.navbar.navbar-default
      .container-fluid
        // Brand and toggle get grouped for better mobile display
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') Todoosey
        // Collect the nav links, forms, and other content for toggling
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          if signin
            a.btn.btn-primary.navbar-btn.navbar-right(style="width: 100%", type='button', ng-click='logout()') Log Out
          else
            a.btn.btn-primary.navbar-btn.navbar-right.login(style="width: 100%", type='button', onclick='login()') Sign Up | Log In
            
  script(src='/scripts/jquery/dist/jquery.min.js')
  script(src='/scripts/bootstrap/js/dropdown.js')
  script(src='/scripts/bootstrap/js/collapse.js')
